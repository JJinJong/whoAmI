
/*

관리자 페이지 

*/


.management_wrapper{
    top: 20%;
    left: 31%;
    position: absolute;
    width: 700px;
   background: #ffffff;
   border: solid 1px rgba(210, 215, 217, 0.75);
    padding: 40px 50px;
   }
   
#board_file1Img{
   width: 50px; 
   height: 50px; 
   display: inline;   
}
   
.col{
   margin: 0;
   padding: 0;
   border: 0;
   vertical-align: baseline;
}

section.management_wrapper ul.my{
    display: flex;
       justify-content: space-between;
       list-style:none;
}

div.management_wrapper li{
   padding: 0 0 0 0.2em;
   vertical-align: middle;
    list-style:none;
}

form.my p{
   margin: 0;
}      
form.my input[type=file]{
   display: none;
}

form.my textarea{
    resize: none;
}

form.my input[type=button]{
   font-size: 0.6em;
}

section.management_wrapper div.management_header ul.my > li:first-child{
   font-weight: bold;
    font-size: 20px;
}

div.management_footer ul.my{
     display: flex;
       justify-content: flex-end;
       list-style:none;
       font-size: 0.8em;
}

div.management_footer input[type=button]{
     font-size: 1em;
}






/*
관리자 페이지 프로필 리스트 
*/

.managelist{
   	top: 20%;
    left: 31%;
    position: absolute;
    width: 60%;
    background: #ffffff;
    border: solid 1px rgba(210, 215, 217, 0.75);
    padding: 40px 50px;
}

.management_profileList caption{
   text-align: left;
   margin-bottom: 3%;
   font-size: 18px;
   font-weight: 700;
}

.management_wrapper  table, .management_wrapper  table th{
   table-layout: fixed;
   text-align: center;
}

.management_wrapper table th:nth-child(6) {
   text-align: right;
}


.management_wrapper table tr td:nth-child(6){
   text-align: right;
   font-size: 0.8em;
}

.management_wrapper table tbody tr{
   background-color: #ffffff !important; 
}

      
      

