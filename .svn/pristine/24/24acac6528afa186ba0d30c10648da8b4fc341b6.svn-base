
/*

관리자 페이지 

*/


.management_wrapper{
    top: 20%;
    left: 31%;
    position: absolute;
    width: 60%;
   background: #ffffff;
   border: solid 1px rgba(210, 215, 217, 0.75);
    padding: 40px 50px;
   }
   
#board_file1Img{
   width: 50px; 
   height: 50px; 
   display: inline;   
}
   
.col{
   margin: 0;
   padding: 0;
   border: 0;
   vertical-align: baseline;
}

section.management_wrapper ul.my{
    display: flex;
       justify-content: space-between;
       list-style:none;
}

div.management_wrapper li{
   padding: 0 0 0 0.2em;
   vertical-align: middle;
    list-style:none;
}

form.my p{
   margin: 0;
}      
form.my input[type=file]{
   display: none;
}

form.my textarea{
    resize: none;
}

form.my input[type=button]{
   font-size: 0.6em;
}

section.management_wrapper div.management_header ul.my > li:first-child{
   font-weight: bold;
    font-size: 20px;
}

div.management_footer ul.my{
     display: flex;
       justify-content: flex-end;
       list-style:none;
       font-size: 0.8em;
}

div.management_footer input[type=button]{
     font-size: 1em;
}






