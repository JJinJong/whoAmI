		}
		
		.commentStatus .Status2 {
		    position: absolute;
		    top: 30px;
		    background-color: rgb(255, 255, 255);
		    height: 120px;
		    width: 112px;
		    overflow: auto;
		    cursor: pointer;
		    box-shadow: rgb(0 0 0 / 20%) 0px 0px 4px 0px inset;
		    border-radius: 10px;
		    padding: 5px 10px 5px 5px;
		    text-align: center;
		}
		
		.commentStatus .Status2 .Status3 {
		    display: inline-block;
		    padding: 0px 10px 2px;
		    margin: 2px;
		    user-select: none;
		    border-radius: 15px;
		}
		
		.commentStatus .Status2 .Status3:hover {
		    background-color: rgb(221, 221, 221);
		}
      
